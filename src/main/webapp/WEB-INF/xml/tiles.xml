<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition name=".contents" template="/WEB-INF/views/tiles/layout.jsp">
        <put-attribute name="css" expression="/WEB-INF/views/tiles/css.jsp" />
        <put-attribute name="script" expression="/WEB-INF/views/tiles/scripts.jsp" />
        <put-attribute name="nav" value="/WEB-INF/views/tiles/nav.jsp" />
        <put-attribute name="body" value=""/>
    </definition>

    <definition name="*.tiles" extends=".contents">
        <put-attribute name="body" value="/WEB-INF/views/{1}.jsp"></put-attribute>
    </definition>

    <definition name="*/*.tiles" extends=".contents">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"></put-attribute>
    </definition>
</tiles-definitions>